<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue_shade_2"
    android:id="@+id/idRLBSheet">

    <TextView
        android:id="@+id/idTVIdenInterview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Interiew"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="3dp"
        android:padding="4dp"
        android:textSize="16sp"/>

    <ImageView
        android:id="@+id/idIVIntervie"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/idTVIdenInterview"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:padding="4dp"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/idTVName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVIdenInterview"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/idIVIntervie"
        android:padding="0dp"
        android:text="Name"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/idTVEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVName"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/idIVIntervie"
        android:padding="0dp"
        android:text="E-mail"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/idTVTelephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVEmail"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/idIVIntervie"
        android:padding="0dp"
        android:text="Telephone"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/idTVPosition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVTelephone"
        android:layout_margin="4dp"
        android:layout_toRightOf="@id/idIVIntervie"
        android:padding="0dp"
        android:text="Poition"
        android:textColor="@color/white"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/idTVPosition">
        
        <Button
            android:id="@+id/idBtnEditIdent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Edit InterView"
            android:textAllCaps="false"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/idBtnViewDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="View Details"
            android:textAllCaps="false"
            android:textColor="@color/white"
            />
    </LinearLayout>

</RelativeLayout>